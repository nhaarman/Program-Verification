/**
 * A class to box int values.
 */
class AtomicInteger {

  int val;

  resource lock_invariant() = Perm(this.val, 1);

  AtomicInteger(int val) {
    this.val = val;
  }

  int getAndIncrement() {
    lock this;
    int res = val;
    val = val + 1;
    unlock this;
    return res;
  }

  int get() {
    lock this;
    int res = val;
    unlock this;
    return res;
  }
}
